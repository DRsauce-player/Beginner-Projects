#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    int length, prev = 0, curr = 1, temp;
    char symbol;

    cout << "Length: ";
    cin >> length;
    cout << "Symbol: ";
    cin >> symbol;
    cout << "Fibonacci Sequence up to " << length + 2 << " numbers.\n";

    for (int i = 0; i < length + 2; i++)
    {
        if (i < 2)
        {
            for (int j = 0; j < i; j++)
            {
                cout << i;
            }
            cout << endl;
        }

        else
        {
            cout << prev + curr;
            temp = curr;
            curr = curr + prev;
            prev = temp;
            cout << endl;
        }
    }

    system("pause>0");
}
